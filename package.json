{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsup",
    "start:prod": "cross-env ENV=prod node dist/src/app.cjs",
    "start:prod-dev": "cross-env ENV=prod-dev node dist/src/app.cjs",
    "start:dev": "cross-env ENV=dev  tsx watch src/app.ts",
    "start:test": "cross-env ENV=test  tsx watch src/app.ts",
    "init_migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev --name=soil",
    "init_migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name=soil",
    "generate:prod": "dotenv -e .env.production -- npx prisma generate ",
    "generate:dev": "dotenv -e .env.development -- npx prisma generate ",
    "studio:prod": "dotenv -e .env.production -- npx prisma studio ",
    "studio:dev": "dotenv -e .env.development -- npx prisma studio ",
    "migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate deploy",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "dotenv -e .env.test -- jest --passWithNoTests --silent --noStackTrace --runInBand --detectOpenHandles --forceExit",
    "test:e2e": "npm test -- --config jest-e2e.config.js",
    "test_debug_watch:e2e": "dotenv -e .env.test -- jest --config jest-e2e.config.js --watch --passWithNoTests --noStackTrace --runInBand --detectOpenHandles --forceExit -- src/presentation/controllers/states/tests/get_cycle.spec.ts",
    "test_watch:e2e": "npm run test:e2e -- --watch ",
    "test:unit": "npm test -- --config jest-unit.config.js",
    "test_watch:unit": "npm run test:unit -- --watch",
    "test_debug_watch:unit": "dotenv -e .env.test -- jest --config jest-unit.config.js --watch --passWithNoTests --noStackTrace --runInBand --detectOpenHandles --forceExit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "4.16.1",
    "aws-iot-device-sdk": "^2.2.12",
    "city-timezones": "^1.2.1",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.8",
    "dotenv": "^16.1.4",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.0",
    "prisma": "^4.16.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.0",
    "supertest": "^6.3.3",
    "tsup": "^6.7.0"
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.26",
    "@types/aws-iot-device-sdk": "^2.2.4",
    "@types/connect-timeout": "^0.0.37",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/node-schedule": "^2.1.0",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  }
}
